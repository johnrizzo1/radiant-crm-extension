- remote_form_for(@account, :url => '/admin/accounts', :html => {:method => :post, :onsubmit => "$('account_submit').disabled = true"} ) do |f|
  = link_to_close new_admin_account_path
  = hidden_field_tag "account[user_id]", @current_user.id
  = f.error_messages
  = render :partial => "admin/accounts/top_section",  :locals => { :f => f }
  = render :partial => "admin/accounts/contact_info", :locals => { :f => f }
  = render :partial => "admin/accounts/permissions",  :locals => { :f => f }
  .buttonbar
    = f.submit "Create Account"
    or 
    = link_to_cancel new_admin_account_path
    
