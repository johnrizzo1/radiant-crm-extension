- remote_form_for(@campaign, :url => '/admin/campaigns', :html => {:method => :post, :onsubmit => "$('campaign_submit').disabled = true"} ) do |f|
  = link_to_close new_admin_campaign_path
  = hidden_field_tag "campaign[user_id]", @current_user.id
  = #f.error_messages
  = render :partial => "admin/campaigns/top_section", :locals => { :f => f }
  = render :partial => "admin/campaigns/objectives",  :locals => { :f => f }
  = render :partial => "admin/campaigns/permissions", :locals => { :f => f }
  .buttonbar
    = f.submit "Create Campaign"
    or
    = link_to_cancel new_admin_campaign_path
