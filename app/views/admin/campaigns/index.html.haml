= styles_for :campaign

.title_tools
  = link_to_inline(:create_campaign, new_admin_campaign_path) << " | "
  = link_to_inline(:options, "/admin/campaigns/options")
  =# link_to_inline(:options, "/", :text => "&#8984;", :plain => true)

.title
  %span#create_campaign_title Campaigns
  = image_tag("loading.gif", :size => "16x16", :id => "loading", :style => "display: none;")
.remote#options{ hidden }
.remote#create_campaign{ hidden }

.list#campaigns
  - unless @campaigns.empty?
    = render :partial => "campaign", :collection => @campaigns
  - else
    = render :partial => "admin/common/empty"
#paginate= render :partial => "admin/common/paginate"
