.remote
  - remote_form_for(@contact, :url => "/admin/contacts/#{@contact.id}", :method => :put, :html => {:method => :get, :onsubmit => "$('contact_submit').disabled = true"} ) do |f|
    = link_to_close edit_admin_contact_path(@contact)
    = f.hidden_field :user_id
    = f.error_messages
    = render :partial => "admin/contacts/top_section", :locals => { :f => f, :edit => true }
    = render :partial => "admin/contacts/extra",       :locals => { :f => f, :edit => true }
    = render :partial => "admin/contacts/web",         :locals => { :f => f, :edit => true }
    = render :partial => "admin/contacts/permissions", :locals => { :f => f, :edit => true }
    .buttonbar
      = f.submit "Save Contact", :onclick => %/$("account_assigned_to").value = $F("contact_assigned_to")/
      or
      = link_to_cancel edit_admin_contact_path(@contact)
