= styles_for :task, :opportunity

#confirm{ hidden }
.title_tools#menu
  = link_to_inline(:edit_contact, edit_admin_contact_path(@contact), :text => "Edit") + " | "
  = link_to_function("Delete?", confirm_delete(@contact))
.title#edit_contact_title= @contact.full_name

%div#edit_contact{ hidden }

= render :partial => "admin/common/new_comment", :locals => { :commentable => @contact }
= render :partial => "admin/common/comment", :collection => @contact.comments

-#-----------------------------------------------------------------------------
%br
= inline :create_task, new_admin_task_path, { :class => "subtitle_tools", :related => dom_id(@contact) }
.subtitle#create_task_title Tasks
.remote#create_task{ hidden }
.log#tasks
  = render :partial => "admin/common/tasks"

-#-----------------------------------------------------------------------------
%br
= inline :create_opportunity, new_admin_opportunity_path, { :class => "subtitle_tools", :related => dom_id(@contact) }
.subtitle#create_opportunity_title Opportunities
.remote#create_opportunity{ hidden }
.list#opportunities
  = render :partial => "admin/opportunities/opportunity", :collection => @contact.opportunities

= hook(:show_contact_bottom, self)
