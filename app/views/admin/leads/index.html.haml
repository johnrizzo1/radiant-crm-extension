= styles_for :lead

.title_tools
  = link_to_inline(:create_lead, new_admin_lead_path) << " | "
  = link_to_inline(:options, "/admin/leads/options")

.title
  %span#create_lead_title Leads
  = image_tag("loading.gif", :size => "16x16", :id => "loading", :style => "display: none;")
.remote#options{ hidden }
.remote#create_lead{ hidden }

.list#leads
  - unless @leads.empty?
    = render :partial => "lead", :collection => @leads
  - else
    = render :partial => "admin/common/empty"
#paginate= render :partial => "admin/common/paginate"
