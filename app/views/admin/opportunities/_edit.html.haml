.remote
  - remote_form_for(@opportunity, :url => "/admin/opportunities/#{@opportunity.id}", :method => :put, :html => {:method => :get, :onsubmit => "$('opportunity_submit').disabled = true"} ) do |f|
    = link_to_close edit_admin_opportunity_path(@opportunity)
    = f.hidden_field :user_id
    = f.hidden_field :campaign_id
    = f.error_messages
    = render :partial => "admin/opportunities/top_section", :locals => { :f => f, :edit => true }
    = render :partial => "admin/opportunities/permissions", :locals => { :f => f, :edit => true }
    .buttonbar
      = f.submit "Save Opportunity", :onclick => %/$("account_assigned_to").value = $F("opportunity_assigned_to");/
      or
      = link_to_cancel edit_admin_opportunity_path(@opportunity)
